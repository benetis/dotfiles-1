[Unit]
Description=Emacs: the extensible, self-documenting text editor

[Service]
Type=forking
ExecStart=/bin/sh '%h/.config/systemd/user/emacs-daemon.start'
ExecStop=/bin/sh '%h/.config/systemd/user/emacs-daemon.stop'
Restart=always

# It sometimes takes longer to start Emacs daemon during boot.
TimeoutStartSec=180

[Install]
WantedBy=default.target
