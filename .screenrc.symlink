vbell off
autodetach on
startup_message off
bell_msg ""

altscreen off
defscrollback 10000

bind - resize -3
bind = resize +3
bind + resize =

# hack: %s is added at the end (not shown) to refresh load every second
caption always "%{= Kd} %H: %2n: %t %-15=%l %s"

# keep calm, if it doesnâ€™t exist, nothing will happen!
source ~/.screenrc.local
